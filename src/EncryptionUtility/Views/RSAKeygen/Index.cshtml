@{
    ViewData["Title"] = "RSA Key Generation Page";
}

<link rel="stylesheet" href="~/css/rsakeygen.css" asp-append-version="true"/>

<div class="text-center">
    <h1 class="mt-5 mb-2">RSA Key Generation Page</h1>
    <div class="d-flex justify-content-start p-3">
        <label for="length" class="col-3">Choose key length:</label>
        <select id="length" class="col-9">
            <option value="None">None</option>
            <option value="1024">1024</option>
            <option value="2048">2048</option>
            <option value="4096">4096</option>
        </select>
    </div>
    <button id="generate" type="button" class="btn btn-primary my-3">Generate</button>
    <div class="row">
        <div class="col-6">
            <textarea id="private" rows="10" cols="30" class="form-control mt-4" readonly></textarea>
        </div>
        <div class="col-6">
            <textarea id="public" rows="10" cols="30" class="form-control mt-4" readonly></textarea>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/rsakeygen.js" asp-append-version="true"></script>
}
