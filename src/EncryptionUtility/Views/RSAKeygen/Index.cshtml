@{
    ViewData["Title"] = "RSA Key Generation Page";
}

    <h1 class="text-center mt-5 mb-2">RSA Key Generation Page</h1>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pair-tab" data-bs-toggle="tab" data-bs-target="#pair" type="button" role="tab" aria-controls="pair" aria-selected="true">Generate private-public keys</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link" id="public-tab" data-bs-toggle="tab" data-bs-target="#public" type="button" role="tab" aria-controls="public" aria-selected="false">Generate public key from private key</button>
      </li>
    </ul>
    
    <div class="tab-content">
        <div class="tab-pane active" id="pair" role="tabpanel" aria-labelledby="pair-tab">
            <div class="form-group">
                <label for="key_size" class="col-3">Choose key length:</label>
                <select id="key_size" class="col-9">
                    <option value="None">None</option>
                    <option value="1024">1024</option>
                    <option value="2048">2048</option>
                    <option value="4096">4096</option>
                </select>
            </div>
            <div class="row">
                <div class="col-6">
                    <textarea id="pair-private" rows="28" cols="30" class="form-control mt-4" readonly></textarea>
                </div>
                <div class="col-6">
                    <textarea id="pair-public" rows="28" cols="30" class="form-control mt-4" readonly></textarea>
                </div>
            </div>
            <button id="pair-generate" type="button" class="btn btn-primary btn-lg mx-auto d-block my-3">Generate</button>
        </div>
        <div class="tab-pane" id="public" role="tabpanel" aria-labelledby="public-tab">
            <div class="row">
                <div class="col-6">
                    <textarea id="public-private" rows="28" cols="30" class="form-control mt-4" placeholder="Paste your private key here."></textarea>
                </div>
                <div class="col-6">
                    <textarea id="public-public" rows="28" cols="30" class="form-control mt-4" readonly></textarea>
                </div>
            </div> 
            <button id="public-generate" type="button" class="btn btn-primary btn-lg mx-auto d-block my-3">Generate</button>
        </div>
    </div>


@section Scripts
{
    <script src="~/js/rsa-keygen.js" asp-append-version="true"></script>
}
